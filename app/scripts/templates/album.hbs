<a href="{{ uri }}"><img style="border: 1px solid black; margin: 5px 20px 5px 5px; width: 200px; float: left;" src="{{ images.[0].url }}">
</a>

<h1>{{name}}</h1>

<h2>
  {{#each artists}}
  <a href = "/#artist/{{ id }}" > {{ name }} </a>
  {{/each}}
</h2>


<div>
    <audio id="player" controls="controls" src="#"></audio>
</div>

<button id="add-playlist" name="add-playlist">Add Playlist</button>

<table class="table table-striped">
  <tr>
    <th>#</th>
     <th>Track Name</th>
     <th>Add to Playlist</th>
  </tr>
  {{#each tracks.items}}
    <tr id="track-number-{{ track_number }}">
      <td>{{ track_number }}</td>
      <td><a class="track" href="{{ preview_url }}">{{ name }}</a>
    </td>
    <td>
      <select>
      {{#each ../playlists}}
        <option value="{{id}}">
        {{name}}
        </option>
      {{/each}}
      </select>
      <button class="add-track btn btn-sm" formaction="#" name="add-track" id="track-{{ track_number }}">Add Track</button>
    </td>
  </tr>
  {{/each}}
</table>